<%@ Page Language="C#" MasterPageFile="MasterPage.Master" AutoEventWireup="true" CodeBehind="Post.aspx.cs" Inherits="XueFuShop.Admin.Post" Title="无标题页" %>
<%@ Import Namespace="XueFuShop.BLL" %><asp:Content ID="MasterContent" ContentPlaceHolderID="ContentPlaceHolder" runat="server"><div class="position"><img src="/Admin/Style/Images/PositionIcon.png"  alt=""/>学习岗位列表</div>
<table class="listTable" cellpadding="0">    <tr class="listTableHead">        <td style="width:40%; text-align:left;text-indent:8px; height: 25px;">岗位名称</td>        <td style="height: 25px">公司名称</td>        <td style="height: 25px">管理</td>    </tr>    <asp:Repeater ID="RecordList" runat="server">    <ItemTemplate>    <tr class="listTableMain" onmousemove="changeColor(this,'#FFFDD7')" onmouseout="changeColor(this,'#FFF')">        <td style=" text-align:left;text-indent:8px;"><%# Eval("PostName") %> [<%# Eval("OrderIndex")%>]</td>        <td ><%# int.Parse(Eval("CompanyID").ToString())>0?CompanyBLL.ReadCompany(int.Parse(Eval("CompanyID").ToString())).CompanySimpleName:"" %> </td>            <td>            <a href="?Action=Up&ID=<%# Eval("PostId") %>"><img src="Style/Images/moveUp.gif" alt="上移" title="上移" /></a>             <a href="?Action=Down&ID=<%# Eval("PostId") %>"><img src="Style/Images/moveDown.gif" alt="下移" title="下移" /></a>             <a href="javascript:pop('PostAdd.aspx?ID=<%#Eval("PostId")%>',600,350,'修改信息','CompanyAdd<%# Eval("PostId") %>')"><img src="Style/Images/edit.gif" alt="修改信息" title="修改密码" /></a>             <a href="Post.aspx?Action=Delete&ID=<%#Eval("PostId") %>"><img src="Style/Images/delete.gif" alt="删除" title="删除" /></a>            <a href="javascript:popPageOnly('PostCourse.aspx?PostID=<%# Eval("PostId") %>',800,550,'关联课程','PostCourse<%# Eval("PostId") %>')">设置课程</a>        </td>    </tr>    </ItemTemplate>    </asp:Repeater></table><div class="action">    <input type="button"  value=" 添 加 " class="button" onclick="pop('PostAdd.aspx',800,350,'用户添加','PostAdd')" id="Button1"/>&nbsp;</div>
</asp:Content>
