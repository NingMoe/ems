<%@ Page Language="C#" MasterPageFile="~/Admin/MasterPage.Master" AutoEventWireup="true" CodeBehind="EmailContentAdd.aspx.cs" Inherits="XueFuShop.Admin.EmailContentAdd" Title="无标题页" %>
<%@ Register Assembly="FredCK.FCKeditorV2" Namespace="FredCK.FCKeditorV2" TagPrefix="FCKeditorV2" %>
<%@ Register Assembly="XueFu.EntLib" Namespace="XueFu.EntLib" TagPrefix="XueFu" %>
<asp:Content ID="MasterContent" ContentPlaceHolderID="ContentPlaceHolder" runat="server"><div class="position"><img src="/Admin/Style/Images/PositionIcon.png"  alt=""/>邮件内容<%=GetEmailContentAddUpdate()%></div><div class="add">	<ul>		<li class="left">标题：</li>		<li class="right"><XueFu:TextBox ID="EmailTitle" CssClass="input" runat="server" Width="400px"  CanBeNull="必填"/></li>	</ul>	<ul>		<li class="left">内容：</li>		<li class="right"><FCKeditorV2:FCKeditor ToolbarSet="Basic" id="EmailContent" runat="server" Width="600px" Height="380px" /></li>	</ul>	<asp:PlaceHolder ID="NotePlaceHolder" runat="server" Visible="false">	<ul>		<li class="left">备注：</li>		<li class="right" style="width:600px"><asp:Label ID="Note" runat="server" /></li>	</ul>	</asp:PlaceHolder></div><div class="action">    <asp:Button CssClass="button" ID="SubmitButton" Text=" 确 定 " runat="server"  OnClick="SubmitButton_Click" /></div></asp:Content>
