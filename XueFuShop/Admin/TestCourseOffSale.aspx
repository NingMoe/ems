<%@ Page Language="C#" MasterPageFile="~/Admin/MasterPage.Master" AutoEventWireup="true" CodeBehind="TestCourseOffSale.aspx.cs" Inherits="XueFuShop.Admin.TestCourseOffSale" Title="无标题页" %>
<%@ Import Namespace="XueFuShop.BLL" %><asp:Content ID="MasterContent" ContentPlaceHolderID="ContentPlaceHolder" runat="server"><script language="javascript" src="js/calendar.js" type="text/javascript"></script><div class="position"><img src="Style/Images/PositionIcon.png"  alt=""/>下架课程</div>	<ul class="search">    <li>        分类：<asp:DropDownList ID="ClassID" runat="server" />         <%--品牌：<asp:DropDownList ID="BrandID" runat="server" /> --%>        关键字：<asp:TextBox CssClass="input" ID="Key" runat="server" Width="100px" title="课程名称，名称拼音首字母或者课程编码"/>		<%--添加时间：从<asp:TextBox CssClass="input" ID="StartAddDate" runat="server" RequiredFieldType="日期时间"  onfocus="cdr.show(this);"/> 到 <asp:TextBox CssClass="input" ID="EndAddDate" runat="server" RequiredFieldType="日期时间"  onfocus="cdr.show(this);"/>--%>	    <asp:Button CssClass="button" ID="SearchButton" Text=" 搜 索 " runat="server"  OnClick="SearchButton_Click" />    </li></ul><table class="listTable" cellpadding="0" cellpadding="0">    <tr class="listTableHead">	    <td style="width:5%">选择</td>	    <td style="width:10%">图片</td>	    <td style="width:25%; text-align:left;text-indent:8px;">课程</td>	    <td style="width:5%">视频</td>	    <td style="width:5%">题库</td>	    <td style="width:5%">试题数量</td>	    <td style="width:20%">分类</td>	    <td style="width:10%">添加时间</td>	    <td style="width:10%">管理</td>    </tr><asp:Repeater ID="RecordList" runat="server">	<ItemTemplate>	         	<tr class="listTableMain" onmousemove="changeColor(this,'#FFFDD7')" onmouseout="changeColor(this,'#FFF')">		    <td><input type="checkbox" name="SelectID" title="<%# Eval("ID") %>" value="<%# Eval("ID") %>" /></td>		    <td><img src="<%#Eval("Photo").ToString().Replace("Original","60-60") %>"   onload="photoLoad(this,40,40)" /></td>		    <td style="text-align:left;text-indent:8px;"><%# Eval("Name") %></td>		    <td><%# CalcItemNum(Eval("ProductNumber").ToString()) %></td>		    <td><%# CalcItemNum(Eval("Accessory").ToString())%></td>		    <td><%# QuestionBLL.ReadQuestionNum(Eval("Accessory").ToString())%></td>		    <td><%# ProductClassBLL.ProductClassNameList(Eval("ClassID").ToString()) %></td>		    <td><%# Eval("AddDate") %></td>		    <td><a href="javascript:pop('TestCourseAdd.aspx?ID=<%# Eval("ID") %>',1000,600,'修改','ProductAdd')" alt="修改" title="修改"><i class="iconfont icon-bianji"></i></a> <a href="javascript:deleteProduct(<%#Eval("ID") %>)" alt="删除" title="删除"><i class="iconfont icon-iconfontshanchu"></i></a></td>        </tr>    </ItemTemplate></asp:Repeater></table><div class="listPage"><XueFu:CommonPager ID="MyPager" runat="server" /></div><div class="action">        <asp:Button CssClass="button" ID="OnSaleButton" Text=" 上 架 " OnClientClick="return checkSelect()" runat="server"  OnClick="OnSaleButton_Click"/>&nbsp;        <input type="checkbox" name="All" onclick="selectAll(this)" />全选/取消</div><script language="javascript" type="text/javascript" src="js/ProductAdd.js"></script></asp:Content>
